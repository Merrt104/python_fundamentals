#silindirin hacmini hesaplayan uygulamayi yazin.

bottom_egde=int(input("please type a number"))
height=int(input("please type a number"))
area= (bottom_egde * height) / 2
print(f'area: {area}')

radius=int(input("please type the radius:"))
area= (radius * radius) * 3.14
perimeter=(radius * 2) * 3.14
print(f"area: {area}")
print(f"perimeter:{perimeter}")

perimeter=int(input("please type the radius:"))
height=int(input("please type the height:"))
